pipeline{
	
  agent {
        docker {
            image 'maven:3-alpine' 
            args '-v /root/.m2:/root/.m2' 
        }
    }

stages{

 stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
}
	
stage('Build'){
	
	steps{
	echo "Building the project...."
	sh 'mvn clean'
	}
}

stage('Test'){
	
	steps{
	echo "Running tests in the project...."
	sh 'mvn test -DsuiteXmlFile=TestNG.xml'
	echo "Running ${env.BUILD_NUMBER} build number on ${env.JENKINS_URL} url for the ${env.JOB_NAME} job on the ${env.BRANCH_NAME} branch"
	}
}

	}


}